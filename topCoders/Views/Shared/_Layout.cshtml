<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - topCoders</title>
    <link rel="stylesheet" href="~/css/tailwind.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/topCoders.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="bg-blue-900">
        <div class="container mx-auto py-6 px-5">
            <div class="flex justify-around items-center">
                <h1 class="text-white font-sarif font-bold text-4xl">
                    <a asp-action="Index">Async|DI|Testing</a>
                </h1>
                <div class="flex items-center">
                    <p class="font-sans text-xl border-2 border-blue-300 py-1 transition ease-in-out duration-150 hover:border-blue-700 px-6 text-white mr-10">
                        <a asp-action="Index">Home</a>
                    </p>
                    <p class="font-sans text-xl border-2 border-blue-300 py-1 transition ease-in-out duration-150 hover:border-blue-700 px-6 text-white">
                        <a asp-action="About">About</a>
                    </p>
                </div>
            </div>
        </div>
    </header>


    <div class="container mx-auto max-w-4xl py-20 px-10">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - topCoders - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
